@model inmobiliaria.Models.Contratos

@{
    ViewData["Title"] = "Crear Contrato";
    var Usuarios = ViewBag.Usuarios;
    var Inmuebles = ViewBag.Inmuebles;
}

<h1 class="text-center text-light">Cree un Contrato</h1>
<h4><a asp-action="Index" ><button type="button" class="btn btn-secondary"><i class="fa-solid fa-arrow-left"></i> Ver Contratos</button></a></h4>
<hr />
<div class="container d-flex flex-column justify-content-between align-items-center">
     <form asp-action="Create" id="create"  class="row">
            <div class="form-group col-6">
                    <h5 class="text-center text-light">Inquilino</h5>
                    <div class="form-group">
                        <label  class="control-label text-light">Inquilino</label>
                        <select asp-for="InquilinoId.Id" class="form-select">
                            <option value=0>Eliga un inquilino</option>
                            @{foreach(var item in Usuarios)
                            {
                                    @:<option value=@item.Id @(item.Id == ViewBag.Inquilino ? "selected" : "" ) >Id:@item.Id | FullName:@item.Nombre @item.Apellido | DNI:@item.DNI </option>
                                }
                            }
                        </select>
                    </div>
                    <p class="text-center text-light"style="margin-top: 1rem;">
                        o
                    </p>
                    <h6 class="text-center text-light">Cree un usuario</h6>
                        <div class="form-group " >
                            <label asp-for="InquilinoId.UsuarioId.DNI" class="control-label text-light">DNI</label>
                            <input asp-for="InquilinoId.UsuarioId.DNI" class="form-control" value="" />
                            <span asp-validation-for="InquilinoId.UsuarioId.DNI" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="InquilinoId.UsuarioId.Nombre" class="control-label text-light">Nombre</label>
                            <input asp-for="InquilinoId.UsuarioId.Nombre" class="form-control" />
                            <span asp-validation-for="InquilinoId.UsuarioId.Nombre" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="InquilinoId.UsuarioId.Apellido" class="control-label text-light">Apellido</label>
                            <input asp-for="InquilinoId.UsuarioId.Apellido" class="form-control" />
                            <span asp-validation-for="InquilinoId.UsuarioId.Apellido" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="InquilinoId.UsuarioId.Telefono" class="control-label text-light">Telefono</label>
                            <input asp-for="InquilinoId.UsuarioId.Telefono" class="form-control" value="" />
                            <span asp-validation-for="InquilinoId.UsuarioId.Telefono" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="InquilinoId.UsuarioId.Mail" class="control-label text-light">Mail</label>
                            <input asp-for="InquilinoId.UsuarioId.Mail" class="form-control" />
                            <span asp-validation-for="InquilinoId.UsuarioId.Mail" class="text-danger"></span>
                        </div>
                    <span asp-validation-for="InquilinoId.Id" class="text-danger"></span>
            </div>
            <div class="form-group col-6">
                <div class="form-group">
                    <label asp-for="FechaInicio" class="control-label text-light">Fecha de Inicio</label>
                    <input asp-for="FechaInicio" value=@ViewBag.FechaInicio class="form-control" required/>
                    <span asp-validation-for="FechaInicio" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FechaFin" class="control-label text-light">Fecha de Fin</label>
                    <input asp-for="FechaFin" value=ViewBag.FechaFin class="form-control" required/>
                    <span asp-validation-for="FechaFin" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label  class="control-label text-light">Inmueble</label>
                    <select asp-for="InmuebleId.Id" class="form-select">
                        <option value=0>Eliga un Inmueble</option>
                        @{foreach(var item in Inmuebles){
                                @:<option value=@item.Id @(item.Id == ViewBag.Inmueble ? "selected" : "" )>Id:@item.Id | Due√±o:Id:@item.PropietarioId.UsuarioId.Id | FullName:@item.PropietarioId.UsuarioId.Nombre @item.PropietarioId.UsuarioId.Apellido | DNI:@item.PropietarioId.UsuarioId.DNI</option>
                            }
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Importe" class="control-label text-light"></label>
                    <input asp-for="Importe" class="form-control" value="" required/>
                    <span asp-validation-for="FechaFin" class="text-danger"></span>
                </div>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" style="width: 100%;"/>
            </div>
        </form>
</div>

