@model inmobiliaria.Models.Empleados

@{
    ViewData["Title"] = "Create";
    IEnumerable<inmobiliaria.Models.Usuarios> lista = ViewBag.Usuarios;
}
<h1 class="text-center text-light">Cree un Empleado</h1>
<h4><a asp-action="Index" ><button type="button" class="btn btn-secondary"><i class="fa-solid fa-arrow-left"></i></button></a></h4>
<hr />
<div class="container d-flex flex-column justify-content-between align-items-center">
    
    <div class="col-md-4">
        <form asp-action="Create" id="create" style="max-width: 500px;" enctype="multipart/form-data">
            <div class="form-group">
                <h5 class="text-center text-light">Eliga un usuario</h5>
                <select asp-for="Id" class="form-select">
                    @{foreach(var item in lista){
                        @:<option value=@item.Id @(item.Id==ViewBag.Id ? "selected" : "" )>@item.toString()</option>
                        }
                    }
                </select>
                <p class="text-center text-light"style="margin-top: 1rem;">
                    o
                </p>
                <h5 class="text-center text-light">Cree un usuario</h5>
                <div>
                    <div class="form-group " >
                        <label asp-for="UsuarioId.DNI" class="control-label text-light">DNI</label>
                        <input asp-for="UsuarioId.DNI" class="form-control" value="" />
                        <span asp-validation-for="UsuarioId.DNI" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UsuarioId.Nombre" class="control-label text-light">Nombre</label>
                        <input asp-for="UsuarioId.Nombre" class="form-control" />
                        <span asp-validation-for="UsuarioId.Nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UsuarioId.Apellido" class="control-label text-light">Apellido</label>
                        <input asp-for="UsuarioId.Apellido" class="form-control" />
                        <span asp-validation-for="UsuarioId.Apellido" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UsuarioId.Telefono" class="control-label text-light">Telefono</label>
                        <input asp-for="UsuarioId.Telefono" class="form-control" value="" />
                        <span asp-validation-for="UsuarioId.Telefono" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UsuarioId.Mail" class="control-label text-light">Mail</label>
                        <input asp-for="UsuarioId.Mail" class="form-control" />
                        <span asp-validation-for="UsuarioId.Mail" class="text-danger"></span>
                    </div>
                </div>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label class="control-label text-light" >Clave</label>
                <input type="password" class="form-control" required id="clave"/>
            </div>
            <div class="form-group">
                <label asp-for="Clave" class="control-label text-light" >Confirmar Clave</label>
                <input type="password" asp-for="Clave" class="form-control" required id="claveConfirm"/>
                <span asp-validation-for="Clave" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="AvatarFileName" class="control-label text-light">Avatar</label>
                <input asp-for="AvatarFileName" class="form-control" />
                <span asp-validation-for="Clave" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" style="width: 100%;"/>
            </div>
            
        </form>
         <div style="margin-top: 1rem;">
             <a asp-action="Create" asp-controller="Usuarios" style="width: 100%;"><button type="button" class="btn btn-secondary"  style="width: 100%;">Crear Usuario <i class="fa-solid fa-plus"></i></button></a>
        </div>
    </div>
</div>

