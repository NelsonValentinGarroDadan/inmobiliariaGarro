@model inmobiliaria.Models.Empleados

@{
    ViewData["Title"] = "Perfil Empleado";
}

<h1 class="text-center text-light">Perfil de Empleado</h1> 
<hr />
<div class="container d-flex flex-column justify-content-between align-items-center">
    <div class="container d-flex">
        <div class="container">
            <p class = "text-light text-center">
                Id
            </p>
            <p class = " text-light text-center">
                DNI
            </p>
            <p class = " text-light text-center">
                Nombre
            </p>
            <p class = " text-light text-center">
                Apellido
            </p>
            <p class = " text-light text-center">
                Telefono
            </p>
            <p class = " text-light text-center">
                Mail
            </p>
            <p class = " text-light text-center">
                Avatar
            </p>
        </div>
        <div class="container">
            <p class = "text-light text-start">
                @Html.DisplayFor(model => model.Id)
            </p>
            <p class = "text-light text-start">
                @Html.DisplayFor(model => model.UsuarioId.DNI)
            </p>
            <p class = "text-light text-start">
                @Html.DisplayFor(model => model.UsuarioId.Nombre)
            </p>
            <p class = "text-light text-start">
                @Html.DisplayFor(model => model.UsuarioId.Apellido)
            </p>
            <p class = "text-light text-start">
                @Html.DisplayFor(model => model.UsuarioId.Telefono)
            </p>
            <p class = "text-light text-start">
                @Html.DisplayFor(model => model.UsuarioId.Mail)
            </p>
            <p class = "d-flex justify-content-start align-items-center">
                @if(Model.Avatar == null)
                {
                    <p class="text-light text-center">Sin Avatar</p>
                }else{
                <img src=@Model.Avatar style="max-width: 8rem; max-height: 8rem;">  
                }
                
            </p>
        </div>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id=@Model.Id asp-controller="Usuarios"><button type="button" class="btn btn-warning" >Editar Perfil<i class="fa-regular fa-pen-to-square"></i></i></button></a>
        <a asp-action="CambiarClave" asp-route-id=@Model.Id><button type="button" class="btn btn-warning" >Cambiar Clave <i class="fa-solid fa-lock"></i></button></a>
        <a asp-action="CambiarAvatar" asp-route-id=@Model.Id><button type="button" class="btn btn-warning" >Cambiar Avatar <i class="fa-brands fa-github-alt"></i></button></a>
    </div>
</div>

