@model inmobiliaria.Models.Inmuebles

@{
    ViewData["Title"] = "Eliminar Inmueble";
}

<h1 class="text-center text-light">Eliminar Inmueble</h1> 
<h4><a asp-action="Index" ><button type="button" class="btn btn-secondary"><i class="fa-solid fa-arrow-left"></i></button></a></h4>
<div class="container d-flex flex-column justify-content-between align-items-center">
    <p class="text-light"><b>Advertencia:</b> Si los datos del Inmueble estan vinculado a algun Contrato, debe borrar esas entidades antes de poder borrar los datos de este Inmueble</p>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2 text-light">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10 text-light">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2 text-light">
            @Html.DisplayNameFor(model => model.Direccion)
        </dt>
        <dd class = "col-sm-10 text-light">
            @Html.DisplayFor(model => model.Direccion)
        </dd>
        <dt class = "col-sm-2 text-light">
            Tipo de Uso
        </dt>
        <dd class = "col-sm-10 text-light">
            @Html.DisplayFor(model => model.TipoUsoId.Descripcion)
        </dd>
        <dt class = "col-sm-2 text-light">
            @Html.DisplayNameFor(model => model.CA)
        </dt>
        <dd class = "col-sm-10 text-light">
            @Html.DisplayFor(model => model.CA)
        </dd>
        <dt class = "col-sm-2 text-light">
            @Html.DisplayNameFor(model => model.Latitud)
        </dt>
        <dd class = "col-sm-10 text-light">
            @Html.DisplayFor(model => model.Latitud)
        </dd>
        <dt class = "col-sm-2 text-light">
            Estado
        </dt>
        <dd class = "col-sm-10 text-light">
            @Html.DisplayFor(model => model.TipoEstadoId.Descripcion)
        </dd>
        <dt class = "col-sm-2 text-light">
            @Html.DisplayNameFor(model => model.Longitud)
        </dt>
        <dd class = "col-sm-10 text-light">
            @Html.DisplayFor(model => model.Longitud)
        </dd>
        
        <dt class = "col-sm-2 text-light">
            Propietario
        </dt>
        <dd class = "col-sm-10 text-light">
            @Html.ActionLink(@Model.PropietarioId.UsuarioId.Nombre+" "+@Model.PropietarioId.UsuarioId.Apellido, "Details","Usuarios", new { id=@Model.PropietarioId.Id })
        </dd>
        <dt class = "col-sm-2 text-light">
            Tipo de Inmueble
        </dt>
        <dd class = "col-sm-10 text-light">
            @Html.DisplayFor(model => model.TipoInmuebleId.Descripcion)
        </dd>
        <dt class = "col-sm-2 text-light">
            @Html.DisplayNameFor(model => model.Precio)
        </dt>
        <dd class = "col-sm-10 text-light">
            @Html.DisplayFor(model => model.Precio)
        </dd>
        <dt class = "col-sm-2 text-light">
            @Html.DisplayNameFor(model => model.FechaInicio)
        </dt>
        <dd class = "col-sm-10 text-light">
            @Html.DisplayFor(model => model.FechaInicio)
        </dd>
        <dt class = "col-sm-2 text-light">
            @Html.DisplayNameFor(model => model.FechaFin)
        </dt>
        <dd class = "col-sm-10 text-light">
            @Html.DisplayFor(model => model.FechaFin)
        </dd>
    </dl>
</div>
<form asp-action="Delete" id="delete">
    <input type="submit" value="Eliminar" class="btn btn-danger" />
</form>