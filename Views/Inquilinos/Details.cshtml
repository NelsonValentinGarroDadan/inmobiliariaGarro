@model inmobiliaria.Models.Inquilinos

@{
    ViewData["Title"] = "Detalles Inquilino";
}

<h1 class="text-center text-light">Informacion del Inquilino</h1> 
<h4><a asp-action="Index" ><button type="button" class="btn btn-secondary"><i class="fa-solid fa-arrow-left"></i> Ver Inquilinos</button></a></h4>
 <hr />
 <div class="container d-flex flex-column justify-content-between align-items-center">
    <div class="container d-flex">
        <div class="container">
            <p class = "text-light text-center">
                Id
            </p>
            <p class = " text-light text-center">
                DNI
            </p>
            <p class = " text-light text-center">
                Nombre
            </p>
            <p class = " text-light text-center">
                Apellido
            </p>
            <p class = " text-light text-center">
                Telefono
            </p>
            <p class = " text-light text-center">
                Mail
            </p>
        </div>
        <div class="container">
            <p class = "text-light text-start">
                @Html.DisplayFor(model => model.Id)
            </p>
            <p class = "text-light text-start">
                @Html.DisplayFor(model => model.UsuarioId.DNI)
            </p>
            <p class = "text-light text-start">
                @Html.DisplayFor(model => model.UsuarioId.Nombre)
            </p>
            <p class = "text-light text-start">
                @Html.DisplayFor(model => model.UsuarioId.Apellido)
            </p>
            <p class = "text-light text-start">
                @Html.DisplayFor(model => model.UsuarioId.Telefono)
            </p>
            <p class = "text-light text-start">
                @Html.DisplayFor(model => model.UsuarioId.Mail)
            </p>
        </div>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id=@Model.Id ><button type="button" class="btn btn-warning" >Editar<i class="fa-regular fa-pen-to-square"></i></i></button></a>
    </div>
 </div>
