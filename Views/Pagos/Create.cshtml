@model inmobiliaria.Models.Pagos

@{
    ViewData["Title"] = "Crear Pago";
    var Contratos = ViewBag.Contratos;
}
<h1 class="text-center text-light">Cree un Pago</h1>
<h4><a asp-action="Index" ><button type="button" class="btn btn-secondary"><i class="fa-solid fa-arrow-left"></i></button></a></h4>
<hr />
<div class="container d-flex flex-column justify-content-between align-items-center">
    <div class="col-md-4">
        <form asp-action="Create" id="create" style="max-width: 500px;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Fecha" class="control-label text-light"></label>
                <input asp-for="Fecha" class="form-control" required/>
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label  text-light">Contratos</label>
                <select asp-for="ContratoId.Id" class="form-select">
                    <option value=0>Eliga un Contrato</option>
                    @foreach(var item in Contratos){
                            <option value=@item.Id>@item.ToString()</option>
                        }
                    
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" style="width: 100%;"/>
            </div>
        </form>
    </div>
</div>

