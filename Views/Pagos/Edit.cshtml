@model inmobiliaria.Models.Pagos

@{
    ViewData["Title"] = "Editar Pago";
    var Contratos = ViewBag.Contratos;
}
<h1 class="text-center text-light">Editar Pago</h1> 
<h4><a asp-action="Index" ><button type="button" class="btn btn-secondary"><i class="fa-solid fa-arrow-left"></i></button></a></h4>

<hr />
<div class="container d-flex flex-column justify-content-between align-items-center">
    <div class="col-md-4">
        <form asp-action="Edit" id="update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label text-light"></label>
                <p class="text-light">@Model.Id</p>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fecha" class="control-label text-light"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label text-light">Contratos</label>
                <select asp-for="ContratoId.Id" class="form-select">
                    @foreach(var item in Contratos){
                            @:<option value=@item.Id @(item.Id==Model.ContratoId.Id ? "selected" : "")>Id:@item.ToString()</option>
                        }
                    
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Importe" class="control-label text-light"></label>
                <input asp-for="Importe" class="form-control" />
                <span asp-validation-for="Importe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" style="width:100%;"/>
            </div>
        </form>
    </div>
</div>


