@model inmobiliaria.Models.Usuarios

@{
    ViewData["Title"] = "Detalles Usuario";
}

<h1 class="text-center text-light">Informacion del Usuario</h1> 
<h4><a asp-action="Index" ><button type="button" class="btn btn-secondary"><i class="fa-solid fa-arrow-left"></i> Ver Usuarios</button></a></h4>
<div class="container d-flex flex-column justify-content-between align-items-center">
   
    <hr />
    <dl class="row">
        <dt class = "col-sm-2 text-light">
           ID
        </dt>
        <dd class = "col-sm-10 text-light">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2 text-light">
            DNI
        </dt>
        <dd class = "col-sm-10 text-light">
            @Html.DisplayFor(model => model.DNI)
        </dd>
        <dt class = "col-sm-2 text-light">
            Nombre
        </dt>
        <dd class = "col-sm-10 text-light">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2 text-light">
            Apellido
        </dt>
        <dd class = "col-sm-10 text-light">
            @Html.DisplayFor(model => model.Apellido)
        </dd>
        <dt class = "col-sm-2 text-light">
           Telefono
        </dt>
        <dd class = "col-sm-10 text-light">
            @Html.DisplayFor(model => model.Telefono)
        </dd>
        <dt class = "col-sm-2 text-light">
           Mail
        </dt>
        <dd class = "col-sm-10 text-light">
            @Html.DisplayFor(model => model.Mail)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id=@Model.Id><button type="button" class="btn btn-warning" >Editar <i class="fa-regular fa-pen-to-square"></i></i></button></a>
</div>
