@model inmobiliaria.Models.UsuariosEspeciales

@{
    ViewData["Title"] = "Login";
}
<h1 class="text-center text-light">Login</h1>
<hr />
<div class="container d-flex flex-column justify-content-between align-items-center">
    <div class="col-md-4">
        <form asp-action="Login" style="max-width: 500px;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label text-light" >Mail</label>
                <input asp-for="UsuarioId.Mail" class="form-control " placeholder="Ingrese su mail" required/>
                <span asp-validation-for="UsuarioId.Mail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Clave" class="control-label text-light">Contrase√±a</label>
                <input type="password" asp-for="Clave" class="form-control " placeholder="Ingrese su clave" required/>
                <span asp-validation-for="Clave" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Ingresar" class="btn btn-primary" style="width: 100%;"/>
            </div>
        </form>
    </div>
</div>

